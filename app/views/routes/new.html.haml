= form_for :route, url: routes_path, html: {class: 'form-horizontal'} do |f|
  .row
    .col-sm-12.col-md-10.col-md-offset-1.col-lg-8.col-lg-offset-2
      .row
        .col-sm-6
          .panel.panel-default
            .panel-heading
              %h3.panel-title Origem
            .panel-body
              .form-group
                = f.label :from_name, html: {class: 'col-sm-2 col-lg-1 control-label'}
                .col-sm-10.col-lg-11
                  = f.text_field :from_name
              .form-group
                = f.label :from_long, html: {class: 'col-sm-2 col-lg-1 control-label'}
                .col-sm-10.col-lg-11
                  = f.text_field :from_long
              .form-group
                = f.label :from_lat, html: {class: 'col-sm-2 col-lg-1 control-label'}
                .col-sm-10.col-lg-11
                  = f.text_field :from_lat
        .col-sm-6
          .panel.panel-default
            .panel-heading
              %h3.panel-title Destino
            .panel-body
              .form-group
                = f.label :to_name, html: {class: 'col-sm-2 col-lg-1 control-label'}
                .col-sm-10.col-lg-11
                  = f.text_field :to_name
              .form-group
                = f.label :to_long, html: {class: 'col-sm-2 col-lg-1 control-label'}
                .col-sm-10.col-lg-11
                  = f.text_field :to_long
              .form-group
                = f.label :to_lat, html: {class: 'col-sm-2 col-lg-1 control-label'}
                .col-sm-10.col-lg-11
                  = f.text_field :to_lat
      .row
        .col-sm-4.col-sm-offset-4.col-md-4.col-md-offset-4.col-lg-2.col-lg-offset-5
          = f.submit
