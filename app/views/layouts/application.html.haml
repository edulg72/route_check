!!! 5
%html
  %head
    %title Route Monitor
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    %header.navbar.navbar-fixed-top.bg-info
      %nav.navbar-inner
        .container
          .row
            .col-sm-8.col-md-8.col-lg-8
              %h3 Route Monitor
            .col-sm-4.col-md-4.col-lg-4
              %ol.breadcrumb.text-right
                - for i in 0...@nav.size
                  - if i == 0
                    %li.active.small= t(@nav[i].keys[0])
                  - else
                    %li.small
                      %a{ :href => @nav[i][@nav[i].keys[0]]}= @nav[i].keys[0]
    #main{:role => "main"}
      .container
        .row
          .span12
            = yield
        .row
          .btn-group.btn-group-justified
            %a.btn.btn-default{:href => 'http://www.waze.com', :target => '_Waze'} Conheça o Waze
            %a.btn.btn-default{:href => 'http://forum.wazebrasil.com', :target => '_forum'} Fórum Brasil
            %a.btn.btn-default{:href => 'http://wiki.waze.com', :target => '_wiki'} Wiki
            %a.btn.btn-default{:href => 'http://dashboard.wazebrasil.com', :target => '_dashboard'} Dashboard
            %a.btn.btn-default{:href => 'http://painel.wazebrasil.com', :target => '_painel'} Painel de Controle
    %footer.container
      .row
        .span12
